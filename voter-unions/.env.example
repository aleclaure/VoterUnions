# Supabase Configuration (Legacy)
# These are used when EXPO_PUBLIC_USE_NEW_BACKEND=false
EXPO_PUBLIC_SUPABASE_URL=your_supabase_url_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================================================
# PHASE 6: HYBRID AUTHENTICATION - 100% ROLLOUT COMPLETE
# ============================================================================
# All feature flags below are ENABLED by default for production deployment
# Two-factor authentication (device token + username/password) is now live
# ============================================================================

# Email Verification Feature Flag
# true = Email verification required (default)
# false = Email verification disabled (development/testing only)
EXPO_PUBLIC_REQUIRE_EMAIL_VERIFICATION=true

# Device Token Authentication Feature Flag
# true = Use Device Token Auth with P-256 ECDSA signatures (ENABLED - Phase 6)
# false = Use legacy Supabase email/password authentication
EXPO_PUBLIC_USE_DEVICE_AUTH=true

# Hybrid Authentication Feature Flag (Phase 6: 100% Rollout)
# true = Two-factor auth: device token + username/password (ENABLED - Phase 6)
# false = Device-only auth (legacy mode, not recommended)
EXPO_PUBLIC_USE_HYBRID_AUTH=true

# Require Username Feature Flag (Phase 6: 100% Rollout)
# true = Username/password required at registration (ENABLED - Phase 6)
# false = Username/password optional (backward compatibility only)
EXPO_PUBLIC_REQUIRE_USERNAME=true

# Backend API Feature Flag
# true = Use new microservices backend (privacy-first)
# false = Use Supabase backend (development/testing only)
EXPO_PUBLIC_USE_NEW_BACKEND=false

# WebAuthn Rollout Percentage (DEPRECATED - Phase 6: Now 100%)
# This flag is deprecated. Hybrid auth is now enabled by default.
# Keep at 0 or 100 (partial rollouts no longer supported)
EXPO_PUBLIC_WEBAUTHN_ROLLOUT_PERCENT=100

# New Backend API URL
# Base URL for the new microservices backend
# Only used when EXPO_PUBLIC_USE_NEW_BACKEND=true
# Development: http://localhost:3001
# Production: https://your-api-domain.com
EXPO_PUBLIC_API_URL=http://localhost:3001

# Session Configuration
# Used for JWT token expiration and session management
SESSION_SECRET=your_session_secret_here_change_in_production
